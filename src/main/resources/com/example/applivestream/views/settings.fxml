<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.applivestream.controller.SettingsController"
            prefWidth="700" prefHeight="450">

    <!-- Sidebar -->
    <left>
    <VBox spacing="10" prefWidth="150" style="-fx-background-color: #393838" >
        <Label text="Tùy chọn" style="-fx-font-size: 16; -fx-padding: 10;-fx-text-fill: white;" />
        <Button fx:id="streamButton" text="Luồng phát" onAction="#showStreamSettings" maxWidth="Infinity"/>
        <Button fx:id="audioButton" text="Âm thanh" onAction="#showAudioSettings" maxWidth="Infinity"/>
        <Button fx:id="videoButton" text="Video" onAction="#showVideoSettings" maxWidth="Infinity"/>
    </VBox>
</left>
    <!-- Nội dung bên phải -->
    <center>
    <StackPane fx:id="contentPane" >
        <!-- tag Luồng phát (mặc định hiện) -->
        <VBox fx:id="streamPane" spacing="10" alignment="TOP_CENTER" visible="true" managed="true">
        <Label text="Cấu hình nền tảng phát" style="-fx-font-size: 16; -fx-font-weight: bold;" />

            <CheckBox fx:id="youtubeCheckbox" text="YouTube" />
            <VBox fx:id="youtubeConfig" spacing="5" visible="false" managed="false" maxWidth="300">
                <Label text="API Key YouTube:" />
                <TextField fx:id="youtubeApiKeyField" style="-fx-border-color: #4a209c"/>
                <Button text="Áp dụng" onAction="#handleApplyYoutube"/>
                <Label fx:id="youtubeStatusLabel" />
                <Label fx:id="youtubeAccountLabel" textFill="green" visible="false" managed="false" />
            </VBox>

            <CheckBox fx:id="facebookCheckbox" text="Facebook" />
            <VBox fx:id="facebookConfig" spacing="5" visible="false" managed="false" maxWidth="300">
                <Label text="Access Token Facebook:" />
                <TextField fx:id="facebookTokenField" style="-fx-border-color: #4a209c"/>
                <Button text="Áp dụng" onAction="#handleApplyFacebook"/>
                <Label fx:id="facebookStatusLabel"  />
                <Label fx:id="facebookAccountLabel" textFill="green" visible="false" managed="false" />
            </VBox>

            <CheckBox fx:id="twitchCheckbox" text="Twitch" />
            <VBox fx:id="twitchConfig" spacing="5" visible="false" managed="false" maxWidth="300">
                <Label text="Stream Key Twitch:" />
                <TextField fx:id="twitchKeyField" style="-fx-border-color: #4a209c"/>
                <Button text="Áp dụng" onAction="#handleApplyTwitch"/>
                <Label fx:id="twitchStatusLabel" textFill="green" />
                <Label fx:id="twitchAccountLabel" textFill="green" visible="false" managed="false" />
            </VBox>
        </VBox>

        <!-- tag Âm thanh -->
        <VBox fx:id="audioPane" spacing="10" alignment="TOP_CENTER" visible="false" managed="false">
            <Label text="Cài đặt Âm thanh" style="-fx-font-size: 16;-fx-font-weight: bold;" />
            <Label text="Empty" />
        </VBox>

        <!--tag Video -->
        <VBox fx:id="videoPane" spacing="10" alignment="TOP_CENTER"   visible="false" managed="false">
            <Label text="Cài đặt Video" style="-fx-font-size: 16;-fx-font-weight: bold;" />
            <Label text="Empty" />
        </VBox>
    </StackPane>
    </center>
</BorderPane>

