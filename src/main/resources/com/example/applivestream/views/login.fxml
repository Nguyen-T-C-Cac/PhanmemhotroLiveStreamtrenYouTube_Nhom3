<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.applivestream.controller.LoginController">
    <children>
        <VBox alignment="CENTER" spacing="15.0" AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
            <Label text="Đăng nhập">
                <font>
                    <Font size="20"/>
                </font>
            </Label>

            <TextField fx:id="emailField" promptText="Email" maxWidth="250"/>
            <PasswordField fx:id="passwordField" promptText="Mật khẩu" maxWidth="250"/>

            <Button text="Đăng nhập" onAction="#onLogin" maxWidth="150"/>

            <Hyperlink text="Chưa có tài khoản? Đăng ký" onAction="#onRegisterRedirect"/>
        </VBox>
    </children>
</AnchorPane>
